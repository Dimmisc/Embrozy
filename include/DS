#ifndef _DEFENITION_SCOPE_HPP_
#define _DEFENITION_SCOPE_HPP_
#include <cstdint>

#define SUCCESS 1
#define FAIL 0
#define ERROR_ASSETS_MISSING -1
#define ERROR_ASSETS_COMPOUND_UNMATCH -2
#define ERROR_COMPOUND_CREATE - 3
#define ERROR_AREA_CREATE -4
#define RENDER_INIT_FAIL -3
#define ERROR_INIT_OPENGL -4    
#define ERROR_INIT_GLFW -5
#define ERROR_UNCOMPATIBLE_DIRECTION -6


namespace directions {
    const uint8_t LEFT = 0b00001000;
    const uint8_t RIGHT = 0b00000100;
    const uint8_t UP = 0b00010000;
    const uint8_t DOWN = 0b00100000; 
    const uint8_t FORWARD = 0b00000001;
    const uint8_t BACKWARD = 0b00000010; 
}


#endif